@model RCP.ViewModel.ReportViewModel

@{
    ViewData["Title"] = "Edycja pracownika";
}


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReportID">

    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkerName" class="form-label"></label>
        <input asp-for="WorkerName" class="form-control">
        <span asp-validation-for="WorkerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control">
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Representant" class="form-label"></label>
        <input asp-for="Representant" class="form-control">
        <span asp-validation-for="Representant" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Month" class="form-label"></label>
        <input asp-for="Month" class="form-control">
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>


    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    <button class="btn btn-primary">Zapisz</button>
</form>