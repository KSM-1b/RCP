@model RCP.ViewModel.ReportViewModel
@{
    ViewData["Title"] = "Create Report";
}

<h1>Tworzenie Raportu</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label for="workerid" class="form-label">ID pracownika</label>
                <input class="form-control">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="clientname" class="form-label">Klient</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="description" class="form-label">Opis</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="startdate" class="form-label">Rozpoczęcie prac</label>
                <input class="form-control" />
                <span class="text-danger"></span> // lista rozwijana 
            </div>

            <div class="form-group">
                <label for="enddate" class="form-label">Zakończenie prac</label>
                <input class="form-control" />
                <span class="text-danger"></span> //lista roziwjana 
            </div>

            <div class="form-group">
                <label for="representant" class="form-label">Przedstawiciel</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>

           
           

            <div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>



    </div>
</div>