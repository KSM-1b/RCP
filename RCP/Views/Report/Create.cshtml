@model RCP.ViewModel.ReportViewModel
@{
    ViewData["Title"] = "Tworzenie Raportu";
}

        <form asp-action="Create" method="post">
            <input type ="hidden" asp-for="Report.ID" />

            <div class="form-group">
                <label asp-for="Report.Worker.WorkerID" class="form-label">ID pracownika</label>
                <input asp-for="Report.Worker.WorkerID" asp-class="form-control">
                <span asp-validation-for="Report.Worker.WorkerID"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Report.Client.ClientName"  class="form-label">Klient</label>
                <input asp-class="Report.Client.ClientName"class="form-control" />
                <span asp-validation-for="Report.Client.ClientName"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Report.Description" class ="form-label">Opis</label>
                <input asp-class="Report.Description" class = "form-control" />
                <span asp-validation-for="Report.Description"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Report.StartDate" class="form-label">Rozpoczęcie prac</label>
                <input asp-class="Report.StartDate" class="form-control" />
                <span asp-validation-for="Report.StartDate"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Report.EndDate" class="form-label">Zakończenie prac</label>
                <input asp-class="Report.EndDate" class="form-control" />
                <span asp-validation-for="Report.EndDate"> </span>
            </div>

            <div class="form-group">
                <label asp-for="Report.Client.Representant" class="form-label">Przedstawiciel</label>
                <input asp-class="Report.Client.Representant" class="form-control" />
                <span asp-validation-for="Report.Client.Representant"> </span>
            </div>

           
           

            <div>
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
                <button class = "btn btn-primary">Stwórz</button>
            </div>
        </form>



    
