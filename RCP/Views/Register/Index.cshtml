@model User
@{
    ViewData["Title"] = "Register";
}

<!-- Formularz rejestracji -->
<form asp-controller="Register" asp-action="Index" method="post">
    <div class="form-group">
        <label class="form-label" asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
            <label class="form-label" asp-for="Username">Username</label>
            <input class="form-control" asp-for="Username" />
        </div>
    <div class="form-group">
        <label class="form-label" asp-for="Password">Password</label>
        <input class="form-control" asp-for="Password" />
    </div>
    <button class="btn btn-danger">Send</button>
</form>

<!-- partial dodaje walidacje po stronie klienta w czasie rzeczywistym-->
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}